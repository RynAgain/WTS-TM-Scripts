{
  "name": "wfm-scanner-app",
  "version": "1.0.0",
  "description": "Electron app for systematically scanning Whole Foods Market items across stores using Playwright",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "install-playwright": "npx playwright install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "playwright",
    "whole-foods",
    "scanner",
    "automation"
  ],
  "author": "WTS-TM-Scripts",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "exceljs": "^4.4.0",
    "csv-parser": "^3.0.0",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.wts.scanner-app",
    "productName": "WFM Scanner App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}